{
    "openapi": "3.2.0",
    "info": {
        "description": "Item API",
        "title": "Item API",
        "version": "1.0.0"
    },
    "paths": {
        "/item": {
            "get": {
                "operationId": "GetItem",
                "responses": {
                    "200": {
                        "description": "item detail response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "item.json"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "key": []
        }
    ],
    "servers": [
        {
            "url": "http://item.api.local/v1"
        }
    ],
    "components": {
        "securitySchemes": {
            "key": {
                "in": "header",
                "name": "x-item-token",
                "type": "apiKey"
            }
        }
    }
}